<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75">

        <TextView
            android:id="@+id/tv_RankValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="2"
            android:textColor="@color/MyCenter_RankValue"
            android:textSize="29dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingRight="3dp">

        <ImageView
            android:id="@+id/iv_crown"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/crown_1" />

        <ProgressBar
            android:id="@+id/pb_Value"
            style="@style/Center_Rank_ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:max="100"
            android:paddingLeft="5dp"
            android:progress="0" />


        <RelativeLayout
            android:id="@+id/rlay_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pb_Value"
            android:layout_centerVertical="true"
            android:layout_marginBottom="9dp">

            <ImageView
                android:id="@+id/iv_headImg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/my_center_cup" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_headImg"
                android:gravity="center_vertical">


                <TextView
                    android:layout_toLeftOf="@+id/llay_tdsvalue"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textSize="16dp" />

                <LinearLayout
                    android:id="@+id/llay_tdsvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="3dp"
                        android:text="@string/TDS"
                        android:textColor="@color/MyCenter_LikeNum"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/MyCenter_LikeNum"
                        android:textSize="15dp" />

                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="0.75"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_likeImg"
            android:layout_width="23dp"
            android:layout_height="19dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/center_heart_red" />

        <TextView
            android:id="@+id/tv_likeNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="2"
            android:textColor="@color/MyCenter_LikeNum"
            android:textSize="14dp" />
    </LinearLayout>
</LinearLayout>