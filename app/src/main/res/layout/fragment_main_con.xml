<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/framen_main_con"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ozner.yiquan.Main.MainConFragment">

    <!--<include-->
    <!--layout="@layout/app_bar_main"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent" />-->
    <!--&lt;!&ndash; TODO: Update blank fragment layout &ndash;&gt;-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_cup_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/cup_main_toobar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="352dp"
                android:layout_weight="1.5"
                android:background="@drawable/main_background">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/logo" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:visibility="gone">

                <com.ozner.yiquan.control.CProessbarView
                    android:id="@+id/my_cproessbarview"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/main_please_add_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="37dp"
                    android:text="@string/main_add"
                    android:textColor="@color/main_add"
                    android:textSize="16dp"

                    />

                <TextView
                    android:id="@+id/main_ozner_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/main_please_add_detail"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:text="@string/main_openOzner"
                    android:textColor="@color/main_add"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/main_add_detail"
                    android:layout_width="139dp"
                    android:layout_height="39dp"
                    android:layout_below="@+id/main_ozner_open"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="37dp"
                    android:background="@drawable/btn_bg_blue_s_choose"
                    android:gravity="center"
                    android:text="@string/main_addDetail"
                    android:textColor="@color/main_addDetail"
                    android:textSize="16dp" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>


</FrameLayout>
