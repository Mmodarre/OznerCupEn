<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_blue_round_corner"
    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="2">
    <TableRow
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lv_device"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/water_purifier" />

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/air_purifier_taishi"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <!--<TextView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:minWidth="10dp"-->
            <!--android:layout_weight="1" />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_connection_icon"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/wifiblue" />

            <TextView
                android:id="@+id/tv_connection_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wifi_connection"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:src="@drawable/right" />

    </TableRow>
    </TableLayout>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:alpha="0.6"
        android:layout_alignParentBottom="true"
        android:background="@color/white" />

</RelativeLayout>
