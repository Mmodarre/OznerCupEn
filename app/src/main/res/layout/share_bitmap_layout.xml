<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/share_layout"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/foot_heght"
    >
    <RelativeLayout
        android:id="@+id/rlay_share_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/share_ranking_bg"
            >
            <ImageView
                android:id="@+id/iv_share_ranking"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/share_ranking_jb"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/tv_share_rankingl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_share_ranking"
                android:text="@string/share_ranking"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="29dp"
                />
            <TextView
                android:id="@+id/tv_share_ranking_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_share_ranking"
                android:layout_toRightOf="@+id/tv_share_rankingl"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="5dp"
                />

        </RelativeLayout>





    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlay_share_value"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        >

        <TextView
            android:id="@+id/tv_sharecontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/share_rankWater"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            />
        <LinearLayout
            android:id="@+id/laly_share_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/tv_sharecontent"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:id="@+id/iv_waterValum"
                android:layout_width="29dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/watervolum" />

            <TextView
                android:id="@+id/tv_sharecontent_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                />
            <TextView
                android:id="@+id/tv_share_dw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ml"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                />





        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_tdsShort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/laly_share_water"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cupDetail_tdsShort_left"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_tdsShort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:textSize="22dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cupDetail_tdsShort_right"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </LinearLayout>



    </RelativeLayout>

        <ImageView
            android:id="@+id/iv_share_pm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/share_bqbad"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/iv_share_pm"
            android:layout_height="60dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"/>
            <ImageView
                android:id="@+id/iv_share_headimage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/customer"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/iv_share_pm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_share_username"
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/air_background"
                android:text="浩小泽"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ozner"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="来自浩泽净水家"

                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


