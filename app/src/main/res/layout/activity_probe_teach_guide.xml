<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ozner.yiquan.TeachGuide.ProbeTeachGuideActivity">
    <!--第一步-->

    <RelativeLayout
        android:background="@drawable/top_mask"
        android:id="@+id/rlay_stet1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/llay_bubble1"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/guide_top_bubble"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/llay_tipsText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/tv_text1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:background="@null"
                    android:padding="0dp"
                    android:text="点击可以进入"
                    android:textColor="@color/cupDetail_textcolor"
                    android:textSize="18dp" />

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/tv_tipstext1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="TDS详情"
                    android:textColor="@color/cupDetail_textcolor"
                    android:textSize="18dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_close1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/guide_close" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:background="@drawable/filter_mask"
        android:gravity="center"
        android:id="@+id/rlay_step2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/llay_bubble2"
            android:layout_width="170dp"
            android:layout_height="190dp"
            android:background="@drawable/filter_bubble"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginBottom="120dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/llay_tipsText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/tv_text2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="0dp"
                    android:text="点击可以进入"
                    android:textColor="@color/cupDetail_textcolor"
                    android:textSize="18dp" />

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/btn_tipstext2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="TDS详情"
                    android:textColor="@color/cupDetail_textcolor"
                    android:textSize="18dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_close2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/guide_close" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
