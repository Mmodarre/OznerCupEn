<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlay_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--第一步-->
    <LinearLayout
        android:id="@+id/flay_over1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llay_over1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/top_mask"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llay_bubble1"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_marginTop="140dp"
                android:background="@drawable/guide_top_bubble"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <LinearLayout
                    android:id="@+id/llay_tipsText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_text1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:background="@null"
                        android:padding="0dp"
                        android:text="点击可以进入"
                        android:textColor="@color/cupDetail_textcolor"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/btn_tipstext1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="TDS详情"
                        android:textColor="@color/cupDetail_textcolor"
                        android:textSize="18dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_close1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/guide_close" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!--第二步-->
    <LinearLayout
        android:id="@+id/flay_over2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">


        <LinearLayout
            android:id="@+id/llay_over2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/left_mask"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llay_bubble2"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/guide_left_bubble"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:id="@+id/llay_tipsText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_text2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:background="@null"
                        android:padding="0dp"
                        android:text="点击可以进入"
                        android:textColor="@color/cupDetail_textcolor"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/btn_tipstext2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="饮水量详情"
                        android:textColor="@color/cupDetail_textcolor"
                        android:textSize="18dp" />

                </LinearLayout>

                <ImageView
                    android:background="@drawable/guide_close"
                    android:id="@+id/iv_close2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--第三步-->
    <LinearLayout
        android:id="@+id/flay_over3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <LinearLayout
            android:id="@+id/llay_over3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/right_mask"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llay_bubble3"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="140dp"
                android:background="@drawable/guide_right_bubble"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingRight="8dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:id="@+id/llay_tipsText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_text3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:background="@null"
                        android:padding="0dp"
                        android:text="点击可以进入"
                        android:textColor="@color/cupDetail_textcolor"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/btn_tipstext3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="饮水量详情"
                        android:textColor="@color/cupDetail_textcolor"
                        android:textSize="18dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_close3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/guide_close" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
