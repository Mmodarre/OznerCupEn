<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/normal_bg"
    tools:context="com.ozner.qianye.Login.LoginActivity">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="13dp"

    >
    <TextView
        android:id="@+id/login_btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_btn_skip"
        android:textSize="17dp"

        android:textColor="#48b4e9"
        android:layout_alignParentRight="true"
        android:paddingRight="16dp"
        />
    <ImageView
        android:layout_marginTop="60dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/login_icon_ozner"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"

        android:paddingBottom="9.5dp"
        android:paddingTop="9.5dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/login_phone"


            />
        <EditText
            android:id="@+id/login_et_phone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="@string/login_et_phone"
            android:background="@drawable/border_none"
            android:paddingLeft="15dp"
            android:phoneNumber="true"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
           android:layout_marginTop="9.5dp"
            android:background="@color/theme_blue"
            ></LinearLayout>
    </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="48dp"
            android:paddingBottom="9.5dp"
            android:paddingTop="9.5dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/login_password"


                    />
                <EditText
                    android:id="@+id/login_et_code"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login_et_phone_code"
                    android:background="@drawable/border_none"
                    android:paddingLeft="15dp"
                    android:phoneNumber="true"
                    />
            </LinearLayout>
            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="9.5dp"
                android:background="@color/theme_blue"
                android:clickable="true"
                android:orientation="horizontal"
                ></LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/login_btn_codeget"
            android:layout_width="96dp"
            android:layout_height="38.5dp"
            android:text="@string/login_btn_getphone"
            android:gravity="center"
            android:clickable="true"
            android:textSize="14dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/theme_blue"
            android:background="@drawable/btn_login_code_2"

            />
    </LinearLayout>
    <TextView
        android:id="@+id/login_tv_wrong"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/zihong"

        />
    <TextView
        android:id="@+id/login_btn_login"
        android:layout_width="265dp"
        android:layout_height="39dp"
        android:background="@drawable/selector_btn_login"
        android:layout_gravity="center_horizontal"
        android:text="@string/login_btn_login"
        android:textSize="17dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="45dp"
        android:clickable="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        >
        <ImageView
            android:id="@+id/login_cb_xieyi"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cb_on"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/login_btn_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/login_p_tishi"
            android:gravity="center"
            android:clickable="true"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="46dp"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="9.5dp"
            android:background="@color/gray"
            ></LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_no_code"
            android:background="@color/normal_bg"
            android:paddingRight="13dp"
            android:paddingLeft="13dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
<TextView
    android:id="@+id/login_btn_voice"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="19dp"
    android:layout_width="265dp"
    android:layout_height="39dp"
    android:background="@drawable/btn_login_voi_on"
    android:text="@string/login_btn_voi"
    android:gravity="center"
    />


</LinearLayout>
